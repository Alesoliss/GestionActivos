@model GestionActivos.Models.SucursalesViewModel

<h4>SucursalesViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sucu_Id" class="control-label"></label>
                <input asp-for="Sucu_Id" class="form-control" id="sucuId" hidden />
                <span asp-validation-for="Sucu_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sucu_Descripcion" class="control-label"></label>
                <input asp-for="Sucu_Descripcion" id="txtdescrip" class="form-control" />
                <span asp-validation-for="Sucu_Descripcion" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Depa_Codigo" class="control-label"></label>
                <select asp-for="Depa_Codigo" class="form-control" id="dept_Id">

                    @foreach (var departamento in ViewBag.Departa)
                    {
                        <option value="@departamento.Value">@departamento.Text</option>
                    }
                </select>
                <span asp-validation-for="Depa_Codigo" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Muni_Codigo" class="control-label"></label>
                <select asp-for="Muni_Codigo" class="form-control" id="muni_Id">

                    @foreach (var departamento in ViewBag.Munici)
                    {
                        <option value="@departamento.Value">@departamento.Text</option>
                    }
                </select>
                <span asp-validation-for="Muni_Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sucu_DireccionExacta" class="control-label"></label>
                <input asp-for="Sucu_DireccionExacta" class="form-control" id="txtdireccion" />
                <span asp-validation-for="Sucu_DireccionExacta" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
