@model GestionActivos.Models.CargosViewModel

<h4>CargosViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Carg_Descripcion" class="control-label"></label>
                <input asp-for="Carg_Descripcion" class="form-control" />
                <span asp-validation-for="Carg_Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
            <div class="col-sm-4">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>


