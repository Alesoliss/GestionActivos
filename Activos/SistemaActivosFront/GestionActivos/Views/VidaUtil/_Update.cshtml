@model SistemasActivos.API.Model.VidaUtilViewmodel

<h4>VidaUtilViewmodel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="VidU_Id" id="vidu_Id" class="form-control" hidden/>
            <div class="form-group">
                <label asp-for="Cate_Id" class="control-label"></label>
                <input asp-for="Cate_Id" id="ddlcate" class="form-control" />
                <span asp-validation-for="Cate_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VidU_Descripcion" class="control-label"></label>
                <input asp-for="VidU_Descripcion" id="txtDescripcion" class="form-control" />
                <span asp-validation-for="VidU_Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VidU_VidaEstimada" class="control-label"></label>
                <input asp-for="VidU_VidaEstimada" id="txtestimado" class="form-control" placeholder="Duracion en años"/>
                <span asp-validation-for="VidU_VidaEstimada" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
