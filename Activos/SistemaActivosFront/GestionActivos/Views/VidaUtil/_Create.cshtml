@model SistemasActivos.API.Model.VidaUtilViewmodel

<h4>VidaUtilViewmodel</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="col-md-6">
                    <label asp-for="Cate_Id" class="control-label"></label>
                    <select asp-for="Cate_Id" class="form-control" id="cate_Id">

                        @foreach (var categoria in ViewBag.Categori)
                        {
                            <option value="@categoria.Value">@categoria.Text</option>
                        }
                    </select>
                    <span asp-validation-for="Cate_Id" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="VidU_Descripcion" class="control-label"></label>
                    <input asp-for="VidU_Descripcion" class="form-control" />
                    <span asp-validation-for="VidU_Descripcion" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="VidU_VidaEstimada" class="control-label"></label>
                <input asp-for="VidU_VidaEstimada" class="form-control" placeholder="Duracion años" />
                <span asp-validation-for="VidU_VidaEstimada" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
            <div class="col-sm-4">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
