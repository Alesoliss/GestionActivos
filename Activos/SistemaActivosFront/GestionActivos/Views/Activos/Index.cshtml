@model IEnumerable<SistemaActivos.Common.Model.ActivosViewmodel>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" crossorigin="anonymous" />

<h1>Index</h1>
<p>
    @*<a asp-action="Create">Nuevo</a>*@
    <a asp-action="Create" class="btn btn-primary" data-toggle="collapse" data-target="#CollapseCrear" aria-expanded="false" aria-controls="collapseExample">Nuevo<i class="fas fa-plus"></i> </a>

</p>


<div class="collapse" id="CollapseCrear">
    <div class="card card-body">
        @Html.Partial("Create", new SistemaActivos.Common.Model.ActivosViewmodel())

    </div>
</div>
<div class="collapse" id="CollapseActualizar">
    <div class="card card-body">
        @Html.Partial("_Update", new SistemaActivos.Common.Model.ActivosViewmodel())
    </div>
</div>
<table class="table table-striped table-bordered" id="activosTable">
    <thead>
        <tr>
            <th>
                Categoría
            </th>
            <th>
                Descripción
            </th>
            <th>
                Precio
            </th>
            <th>
                Marca
            </th>
            <th>
                Modelo
            </th>
            <th>
                Número de Serie
            </th>
            <th>
                Fecha de Adquisición
            </th>
            <th>
                Encargado
            </th>
            <th>
                Vida Estimada
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cate_Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Acti_Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Acti_Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Acti_Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Acti_Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Acti_NoSerio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Acti_FechaAdquisicion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Encargado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VidU_VidaEstimada)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Acti_Id" data-toggle="collapse" data-target="#CollapseActualizar , #CollapseTabla" aria-expanded="false" aria-controls="collapseExample" onclick="LLenarCollapse('@item.Acti_Id')"><i class="fas fa-edit btn btn-primary mr-2">Editar</i></a>|

                    <a class="btn btn-info" href="@Url.Action("Details", new { id = item.Acti_Id })">
                        <i class="fas fa-info-circle"></i> Detalles
                    </a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Acti_Id })">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
