@model IEnumerable<GestionActivos.Models.CargosViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" data-toggle="collapse" data-target="#CollapseCrear, #CollapseTabla" aria-expanded="false" aria-controls="collapseExample">Nuevo</a>
    @*<a asp-action="Create">Create New</a>*@
</p>

<div class="collapse" id="CollapseCrear">
    <div class="card card-body">
        @Html.Partial("_Create", new GestionActivos.Models.CargosViewModel())
    </div>
</div>

<div class="collapse" id="CollapseActualizar">
    <div class="card card-body">
        @Html.Partial("_Update", new GestionActivos.Models.CargosViewModel())
    </div>
</div>
<div class="collapse show" id="CollapseTabla">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Carg_Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carg_Descripcion)
                </th>

                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Carg_Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Carg_Descripcion)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Carg_Id" data-toggle="collapse" data-target="#CollapseActualizar, #CollapseTabla" aria-expanded="false" aria-controls="collapseExample" onclick="LLenarCollapse('@item.Carg_Id')"><i class="mdi mdi-pencil btn btn-primary mr-2">Editar</i></a>
                        <a href="@Url.Action("Details", "Cargos", new {Carg_Id = item.Carg_Id})" class="mdi mdi-eye btn btn-warning mr-2">detalle</a>
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        <a asp-action="Eliminar" asp-route-id="@item.Carg_Id" data-toggle="modal" data-target="#ModalEliminar" onclick="ObtenerDelete('@item.Carg_Id')"><i class="mdi mdi-trash-can btn btn-danger ">Eliminar</i></a>
                        @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="ModalEliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Eliminar</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <h3>Esta seguro de eliminar este registro?</h3>
                </div>
                <div class="modal-body">
                    @Html.Partial("_Delete", new GestionActivos.Models.CargosViewModel())
                </div>
            </div>
        </div>
    </div>
</div>

